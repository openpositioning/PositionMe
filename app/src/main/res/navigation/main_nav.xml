<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/recordingFragment">

    <fragment
        android:id="@+id/recordingFragment"
        android:name="com.openpositioning.PositionMe.presentation.fragment.RecordingFragment"
        android:label="Recording"
        tools:layout="@layout/fragment_recording" >
        <action
            android:id="@+id/action_recordingFragment_to_correctionFragment"
            app:destination="@id/correctionFragment" />
    </fragment>

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.openpositioning.PositionMe.presentation.fragment.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.openpositioning.PositionMe.presentation.fragment.SettingsFragment"
        android:label="Settings"/>

    <fragment
        android:id="@+id/filesFragment"
        android:name="com.openpositioning.PositionMe.presentation.fragment.FilesFragment"
        android:label="Files"
        tools:layout="@layout/fragment_files">

        <action
            android:id="@+id/action_filesFragment_to_uploadFragment"
            app:destination="@id/uploadFragment" />
    </fragment>

    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.openpositioning.PositionMe.presentation.fragment.UploadFragment"
        android:label="Upload"
        tools:layout="@layout/fragment_upload" />

    <fragment
        android:id="@+id/correctionFragment"
        android:name="com.openpositioning.PositionMe.presentation.fragment.CorrectionFragment"
        android:label="CorrectionFragment"
        tools:layout="@layout/fragment_correction">

        <action
            android:id="@+id/action_correctionFragment_to_recordingFragment"
            app:destination="@id/recordingFragment" />
    </fragment>


</navigation>
