<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 添加一个 Guideline，标识屏幕 2/3 的位置 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/statusGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6667" />

    <!-- TOP SECTION: Calibration & Other Controls -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#AAFFFFFF"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Control Row with Buttons -->
        <LinearLayout
            android:id="@+id/controlRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <!-- Grouped Left Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moreInfoButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="@string/more_info"
                    app:icon="@drawable/ic_info_svgrepo_com"
                    app:backgroundTint="@color/md_theme_primary"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    app:iconSize="24dp"
                    android:padding="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/md_theme_light_primary"
                    app:iconPadding="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleCalibrationMenuButton"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/tag"
                    android:textSize="18sp"
                    android:contentDescription="@string/more_info"
                    app:icon="@drawable/ic_tag_plus_svgrepo_com"
                    app:backgroundTint="@color/md_theme_primary"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    app:iconSize="24dp"
                    android:padding="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/md_theme_light_primary"
                    app:iconPadding="0dp" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finishRecordingButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/more_info"
                app:icon="@drawable/next_svgrepo_com"
                app:backgroundTint="@color/md_theme_primary"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                app:iconSize="24dp"
                android:padding="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/md_theme_light_primary"
                app:iconPadding="0dp" />
        </LinearLayout>

        <!-- Calibration Fragment Container (Initially GONE) -->
        <FrameLayout
            android:id="@+id/calibrationFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <!-- MIDDLE SECTION: Map Fragment -->
    <FrameLayout
        android:id="@+id/trajectoryMapFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topSection"
        app:layout_constraintBottom_toTopOf="@id/controlLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTTOM SECTION: Reserved for Other Controls -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#AAFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
