<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 地图背景 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragmentContainer"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 浮动图层 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Extra-large page title -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_me"
            android:textAlignment="center"
            android:textColor="@color/md_theme_primary"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Slogan beneath the title -->


        <!-- GNSS status message (hidden by default) -->

        <TextView
            android:id="@+id/sloganText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fragment_home_slogan"
            android:textAlignment="center"
            android:textColor="@color/md_theme_primary"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.071" />

        <TextView
            android:id="@+id/gnssStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/gnss_disabled"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sloganText" />

        <!-- 四个悬浮按钮：右下角垂直排列 -->
        <LinearLayout
            android:id="@+id/fabGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/indoorFab"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/startStopFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="@string/start_recording"
                app:backgroundTint="@color/md_theme_primary"
                app:srcCompat="@drawable/ic_baseline_directions_walk_24"
                app:tint="@android:color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/filesFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="@string/files"
                app:backgroundTint="@color/md_theme_secondaryContainer"
                app:srcCompat="@drawable/ic_baseline_folder_24"
                app:tint="@color/md_theme_onSecondaryContainer" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/infoFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="@string/info"
                app:backgroundTint="@color/md_theme_tertiaryContainer"
                app:srcCompat="@drawable/ic_baseline_info_24"
                app:tint="@color/md_theme_onTertiaryContainer" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/measurementFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/measurements"
                app:backgroundTint="@color/md_theme_surfaceVariant"
                app:srcCompat="@drawable/ic_baseline_data_array_24"
                app:tint="@color/md_theme_onSurfaceVariant" />
        </LinearLayout>

        <!-- Live Position 大按钮，底部中间居中 -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/indoorFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:text="Live Position"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/md_theme_primaryContainer"
            app:iconTint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
