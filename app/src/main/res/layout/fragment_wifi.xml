<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wifiFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map FragmentContainerView -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/wifiMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top-level ConstraintLayout overlay for UI controls -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map type spinner (Hybrid, Normal, Satellite, etc.) -->
        <Spinner
            android:id="@+id/mapSwitchSpinner_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Floor Up Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floorUpButton_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@android:drawable/arrow_up_float"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <!-- Floor Down Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floorDownButton_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@android:drawable/arrow_down_float"
            app:layout_constraintTop_toBottomOf="@id/floorUpButton_wifi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <!-- Exit Button at the Bottom -->
        <Button
            android:id="@+id/exitButton_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
