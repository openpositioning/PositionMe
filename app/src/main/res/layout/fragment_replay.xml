<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReplayTrajFragment">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ReplayMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText">

        <ImageButton
            android:id="@+id/ReplayBackButton"
            android:layout_width="100dp"
            android:layout_height="51dp"
            android:backgroundTint="#F0A6E8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.039"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="378dp"
            android:layout_height="31dp"
            android:backgroundTint="@color/purple_200"
            android:backgroundTintMode="add"
            android:progressBackgroundTint="#6F4D81"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.804" />


        <Spinner
            android:id="@+id/ReplayMapSwitchSpinner"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#F0A6E8"
            android:backgroundTintMode="src_in"
            android:popupBackground="@drawable/rounded_corner"
            android:spinnerMode="dropdown"
            android:text="@string/choose_map"
            android:textAlignment="center"
            android:textColor = "#6F4D81"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />

        <ImageButton
            android:id="@+id/PlayPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0A6E8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.904"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/ReplayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0A6E8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.904"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageButton
            android:id="@+id/GoToEndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F0A6E8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.811"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.904"
            app:srcCompat="@android:drawable/ic_media_next" />

        <Switch
            android:id="@+id/switchGNSS"
            android:layout_width="146dp"
            android:layout_height="24dp"
            android:background="@drawable/rounded_corner_lightblue"
            android:backgroundTint="#F0A6E8"
            android:checked="true"
            android:text="@string/GNSSposition"
            android:textAlignment="center"
            android:textColor="#6F4D81"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ReplayMapSwitchSpinner"
            app:layout_constraintVertical_bias="0.031" />

        <TextView
            android:id="@+id/ElevationView"
            android:layout_width="178dp"
            android:layout_height="42dp"
            android:background="@drawable/rounded_corner_lightblue_medium"
            android:backgroundTint="#F0A6E8"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ElevationPres"
            android:textAlignment="center"
            android:textColor="#6F4D81"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>