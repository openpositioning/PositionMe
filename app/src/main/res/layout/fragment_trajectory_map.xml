<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trajectory_map_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The actual map container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/trajectoryMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top horizontal layout for map controls -->
    <LinearLayout
        android:id="@+id/top_control_layout"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_margin="10dp"
        android:background="?attr/colorSurface"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_anchor="@id/trajectoryMap"
        app:layout_anchorGravity="top">

        <!-- Toggle Raw Trajectory button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/showRawButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/md_theme_surface"
            android:contentDescription="Toggle Raw Trajectory"
            android:icon="@drawable/ic_baseline_navigation_24"
            android:iconTint="@color/red"
            app:cornerRadius="28dp" />

        <!-- Toggle Fusion Trajectory button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/showFusionButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/md_theme_surface"
            android:contentDescription="Toggle Fusion Trajectory"
            android:icon="@drawable/ic_baseline_navigation_24_green"
            android:iconTint="@android:color/holo_green_dark"
            app:cornerRadius="28dp" />

        <!-- GNSS switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/gnssSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/gnssSwitch" />

        <!-- Auto-floor switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/autoFloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/auto_floor" />

        <!-- Change line color button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/lineColorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/red"
            android:text="@string/color"
            android:textColor="@color/md_theme_onPrimary"
            app:elevation="5dp" />

        <!-- Spinner for map switching -->
        <Spinner
            android:id="@+id/mapSwitchSpinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:elevation="5dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <!-- Floating action buttons for floor control, properly spaced -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/trajectoryMap"
        app:layout_anchorGravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floorDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="@string/floor_down"
            android:src="@android:drawable/arrow_down_float"
            app:backgroundTint="@color/md_theme_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/md_theme_onPrimary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floorUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="@string/floor_up"
            android:src="@android:drawable/arrow_up_float"
            app:backgroundTint="@color/md_theme_primary"
            app:layout_constraintBottom_toTopOf="@id/floorDownButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/md_theme_onPrimary" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
