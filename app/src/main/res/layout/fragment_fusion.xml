<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fusionFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 地图背景 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fusionMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- UI 控件覆盖层 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- 精度显示的 TextView -->
        <TextView
            android:id="@+id/accuracyTextView_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy: -- m"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="#80000000"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- 室内/室外状态显示 -->
        <TextView
            android:id="@+id/indoorOutdoorTextView_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor/Outdoor: --"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="#80000000"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/accuracyTextView_fusion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Map Type 切换的 Spinner -->
        <Spinner
            android:id="@+id/mapSwitchSpinner_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/indoorOutdoorTextView_fusion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- 楼层上升按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floorUpButton_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_up_float"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

        <!-- 楼层下降按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floorDownButton_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            app:layout_constraintTop_toBottomOf="@id/floorUpButton_fusion"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Add Tag 按钮 -->
        <Button
            android:id="@+id/addTagButton_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tag"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/exitButton_fusion"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"/>

        <!-- Exit 按钮 -->
        <Button
            android:id="@+id/exitButton_fusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
