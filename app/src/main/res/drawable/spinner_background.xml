<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- White solid fill -->
    <solid android:color="#FFFFFF"/>
    <!-- Rounded corners -->
    <corners android:radius="8dp"/>
    <!-- Padding so the background extends with content -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
